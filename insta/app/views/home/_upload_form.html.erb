<%= form_for Post.new do |f| %> 
    <div class="form-group">
      <%= f.text_field :description %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %> <!--helper method to upload image.-->
    </div>
    <div class="form-group">

      <% if user_signed_in? %> <!-- user must be signed in to make post -->
        <%= f.text_field :user_id, value: current_user.id, class:'d-none' %>
        <!--user_id is user create post, it's current_user and we hide this 
        field in the form by ‘d-none’ CSS class.-->
      <% end %>

    </div>
    <br>
    <div class="text-center">
      <%= f.submit 'Create Post', class: 'btn btn-primary' %>
    </div>
  <% end %>